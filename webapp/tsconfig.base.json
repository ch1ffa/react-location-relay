{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": "src",
    "rootDir": "./",
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src",
    "@types"
  ],
  "compileOnSave": false
}
